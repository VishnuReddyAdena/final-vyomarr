import React, { useEffect, useState, useCallback } from "react";
import "../css/main.css";

/**
 * SubmitTheory.jsx — Optimized single-file React component
 * - Uses Tailwind utility classes where possible
 * - Minimizes inline styles and duplicated CSS
 * - Accessible form with client-side validation
 * - Lightweight Back-to-Top using a single scroll listener
 * - Exported as React.memo for minor prop-change optimization
 *
 * NOTE: Keep Google Fonts and Tailwind included globally (public/index.html)
 */

const rootCss = `
:root{--color-deep-space:#000b49;--color-space-orange:#fc4c00;--color-cosmic-white:#f8f9f9;--color-mist-gray:#bfc3c6;--color-surface-glass:rgba(0,11,73,0.7);--font-heading:'Montserrat',sans-serif;--font-body:'Lato',sans-serif;--font-tech:'Roboto Mono',monospace}
.font-clash{font-family:var(--font-heading)!important;letter-spacing:-0.5px}
.text-tech{font-family:var(--font-tech);font-style:italic}
.cosmic-card{background-color:var(--color-surface-glass);border:1px solid rgba(191,195,198,0.12);backdrop-filter:blur(12px);-webkit-backdrop-filter:blur(12px);box-shadow:0 8px 24px rgba(0,0,0,0.35);transition:transform .22s ease,box-shadow .22s ease}
.cosmic-card:hover{transform:translateY(-4px)}
.step-badge{background:var(--color-space-orange);color:var(--color-cosmic-white);box-shadow:0 6px 18px rgba(252,76,0,0.18)}
.btn-submit{background:var(--color-space-orange);color:var(--color-cosmic-white)}
.back-to-top{position:fixed;right:1.25rem;bottom:1.875rem;width:48px;height:48px;border-radius:9999px;display:grid;place-items:center;box-shadow:0 8px 24px rgba(252,76,0,0.18);z-index:50}
`;

function useScrollThreshold(threshold = 300) {
  const [visible, setVisible] = useState(false);
  useEffect(() => {
    let mounted = true;
    const onScroll = () => mounted && setVisible(window.scrollY > threshold);
    window.addEventListener("scroll", onScroll, { passive: true });
    onScroll();
    return () => {
      mounted = false;
      window.removeEventListener("scroll", onScroll);
    };
  }, [threshold]);
  return visible;
}

function SubmitTheoryInner() {
  const showTop = useScrollThreshold(280);
  const [form, setForm] = useState({ name: "", theory: "", file: null });
  const [errors, setErrors] = useState({});
  const [submitting, setSubmitting] = useState(false);
  const [success, setSuccess] = useState("");

  const onChange = useCallback((e) => {
    const { name, value, files } = e.target;
    if (files) return setForm((s) => ({ ...s, [name]: files[0] })) ;
    setForm((s) => ({ ...s, [name]: value }));
  }, []);

  const validate = useCallback(() => {
    const out = {};
    if (!form.theory || form.theory.trim().length < 20) out.theory = "Please enter a theory (min 20 characters).";
    if (form.theory && form.theory.length > 2000) out.theory = "Theory is too long (max 2000 characters).";
    return out;
  }, [form.theory]);

  const onSubmit = async (e) => {
    e.preventDefault();
    setErrors({});
    const err = validate();
    if (Object.keys(err).length) return setErrors(err);
    setSubmitting(true);
    setSuccess("");

    try {
      // Replace this block with your real API call / integration
      await new Promise((r) => setTimeout(r, 700));
      setSuccess("Your theory was submitted — thank you!");
      setForm({ name: "", theory: "", file: null });
    } catch (err) {
      setErrors({ submit: "Failed to submit. Try again later." });
    } finally {
      setSubmitting(false);
    }
  };

  const scrollToTop = useCallback(() => window.scrollTo({ top: 0, behavior: "smooth" }), []);

  return (
    <div className="min-h-screen p-4 sm:p-8 md:p-12" style={{ backgroundColor: "var(--color-deep-space)", color: "var(--color-cosmic-white)", fontFamily: "var(--font-body)" }}>
      <style>{rootCss}</style>

      <div className="max-w-4xl mx-auto pt-20 pb-12">
        <header className="text-center mb-12 animate-[float_6s_ease-in-out_infinite]">
          <h1 className="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 font-clash">
            How to Submit a <span style={{ color: "var(--color-space-orange)" }}>Theory</span>
          </h1>
          <p className="text-md sm:text-lg text-tech max-w-2xl mx-auto" style={{ color: "var(--color-mist-gray)" }}>
            To contribute to Vyomarr's “What If...” section, follow this simple submission flow. Submissions are reviewed before publication.
          </p>
        </header>

        <main className="space-y-6">
          {/** Steps grid: use responsive two-column at md */}
          <section className="grid gap-6">
            <article className="cosmic-card p-6 rounded-lg md:flex md:items-start md:gap-6">
              <div className="flex-shrink-0 w-10 h-10 rounded-full step-badge grid place-items-center text-lg font-semibold">1</div>
              <div>
                <h2 className="text-xl font-semibold mb-1">Pick a Compelling "What If" Question</h2>
                <p className="text-sm" style={{ color: "var(--color-mist-gray)" }}>Center on a thought-provoking idea that explores scientific, philosophical or space-related concepts.</p>
                <ul className="list-disc list-inside mt-3 text-sm text-tech" style={{ color: "var(--color-mist-gray)" }}>
                  <li>What if time flowed in reverse?</li>
                  <li>What if Earth had two moons?</li>
                </ul>
              </div>
            </article>

            <article className="cosmic-card p-6 rounded-lg md:flex md:items-start md:gap-6">
              <div className="flex-shrink-0 w-10 h-10 rounded-full step-badge grid place-items-center text-lg font-semibold">2</div>
              <div>
                <h2 className="text-xl font-semibold mb-1">Write Clearly & Creatively</h2>
                <p className="text-sm" style={{ color: "var(--color-mist-gray)" }}>Structure in 1–2 paragraphs. Be original — include logic, speculation or imagination. Avoid vagueness.</p>
              </div>
            </article>

            <article className="cosmic-card p-6 rounded-lg md:flex md:items-start md:gap-6">
              <div className="flex-shrink-0 w-10 h-10 rounded-full step-badge grid place-items-center text-lg font-semibold">3</div>
              <div>
                <h2 className="text-xl font-semibold mb-1">Open the Submission Page</h2>
                <p className="text-sm mb-4" style={{ color: "var(--color-mist-gray)" }}>Navigate to the “What If...” section and click the submit button to start.</p>
                <a href="#submit-form" className="btn-submit inline-block px-4 py-2 rounded-md text-sm font-semibold no-underline">Submit Your Theory</a>
              </div>
            </article>

            <article className="cosmic-card p-6 rounded-lg md:flex md:items-start md:gap-6">
              <div className="flex-shrink-0 w-10 h-10 rounded-full step-badge grid place-items-center text-lg font-semibold">4</div>
              <div>
                <h2 className="text-xl font-semibold mb-1">Complete the Form</h2>
                <p className="text-sm" style={{ color: "var(--color-mist-gray)" }}>Name (optional), theory text, and optional file upload (image/diagram).</p>
              </div>
            </article>

            <article className="cosmic-card p-6 rounded-lg md:flex md:items-start md:gap-6">
              <div className="flex-shrink-0 w-10 h-10 rounded-full step-badge grid place-items-center text-lg font-semibold">5</div>
              <div>
                <h2 className="text-xl font-semibold mb-1">Review & Publish</h2>
                <p className="text-sm" style={{ color: "var(--color-mist-gray)" }}>Submissions are manually reviewed for originality, quality and guideline compliance.</p>
              </div>
            </article>
          </section>

          {/** Submission form */}
          <section id="submit-form" className="p-6 border rounded-lg mt-4" style={{ backgroundColor: "rgba(255,255,255,0.02)", borderColor: "rgba(191,195,198,0.08)" }}>
            <h3 className="text-lg font-semibold mb-4">Submit Your Theory</h3>
            <form onSubmit={onSubmit} className="space-y-4">
              <div>
                <label htmlFor="name" className="block text-sm mb-1">Name (optional)</label>
                <input id="name" name="name" value={form.name} onChange={onChange} className="w-full rounded-md p-2 bg-transparent border border-gray-700 text-sm" placeholder="Your name or leave blank for anonymous" />
              </div>

              <div>
                <label htmlFor="theory" className="block text-sm mb-1">Your Theory</label>
                <textarea id="theory" name="theory" value={form.theory} onChange={onChange} rows={6} className="w-full rounded-md p-2 bg-transparent border border-gray-700 text-sm" placeholder="Write 500–1000 words focused on one idea..." required />
                {errors.theory && <p className="text-xs mt-1 text-red-300">{errors.theory}</p>}
              </div>

              <div>
                <label htmlFor="file" className="block text-sm mb-1">Optional file (image/diagram)</label>
                <input id="file" name="file" type="file" accept="image/*,.png,.jpg,.jpeg,.svg" onChange={onChange} className="text-sm" />
              </div>

              {errors.submit && <p className="text-sm text-red-300">{errors.submit}</p>}
              {success && <p className="text-sm text-green-300">{success}</p>}

              <div className="flex items-center gap-3">
                <button type="submit" disabled={submitting} className="btn-submit px-4 py-2 rounded-md font-semibold">
                  {submitting ? "Submitting..." : "Submit"}
                </button>
                <p className="text-xs text-tech" style={{ color: "var(--color-mist-gray)" }}>Stay within 500–1000 words for best chance to be featured.</p>
              </div>
            </form>

            <div className="mt-6 border-t pt-4 text-sm text-tech" style={{ color: "var(--color-mist-gray)" }}>
              <strong>Tips:</strong>
              <ul className="list-disc list-inside mt-2">
                <li>Use original writing — avoid copy-paste content.</li>
                <li>Focus on surprising or challenging ideas and avoid clickbait.</li>
                <li>Include diagrams or illustrations when they clarify your idea.</li>
              </ul>
            </div>
          </section>
        </main>
      </div>

      {/** Back to Top */}
      <button aria-label="Back to top" onClick={scrollToTop} className={`back-to-top ${showTop ? "opacity-100 scale-100" : "opacity-0 scale-95 pointer-events-none"}`}>
        <span aria-hidden>↑</span>
      </button>

      <footer className="sr-only" />
    </div>
  );
}

const SubmitTheory = React.memo(SubmitTheoryInner);
export default SubmitTheory;

<script id="dhws-dataInjector" src="../../public/dhws-data-injector.js"></script>
